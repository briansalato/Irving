@model Irving.Web.Models.Car

<div id="confirmDelete" class="confirmDelete hidden">
    <form action="@(Url.DeletePost<Car>())" method="post">
        @Html.HiddenFor(m => m.Id)

        <p>Are you sure you want to delete this car? This change cannot be reverted.</p>

        <input type="submit" value="Delete" />
        <input type="button" onclick="Irving.DbCRUD.hideConfirmDelete()" value="Cancel" />
    </form>
</div>