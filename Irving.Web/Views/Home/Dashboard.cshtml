@model Irving.Web.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}

<h1>Current Assets</h1>
<a class="button" href="@(Url.Create<Asset>())">+</a>
<div id="dashboard">
    @DisplayAssetLeaves(Model.Assets)
</div>

@helper DisplayAssetLeaves(IEnumerable<Irving.Web.ViewModels.DashboardAssetViewModel> assets) 
{
    <ul>
        @foreach (var asset in assets)
        {
            <li>
                <a href="@(Url.Show<Asset>(asset.Id))">
                    <img />
                    @asset.Name
                </a>
            </li>
        }
    </ul>
}
